#!/usr/bin/env bash

# Check if we're root and re-execute if we're not.
rootcheck () {
    if [ $(id -u) != "0" ]
    then
        sudo "$0" "$@"  # Modified as suggested below.
        exit $?
    fi
}

rootcheck "${@}"

rm -rf /greengrass
mkdir -p /greengrass && sudo tar -zxf ${GG_BITS} -C /
cp certs/* /greengrass/certs/
cp config/* /greengrass/config/
